<Page x:Class="Objednavkovy_system.NewGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Objednavkovy_system"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="NewGame"
      xmlns:fa="http://schemas.fontawesome.io/icons/">

    <Grid>
        <StackPanel Margin="5">
            <Label>Nazev hry</Label>
            <TextBox x:Name="Name"></TextBox>
            <Grid Width="100" Height="100" Margin="10" Background="#FF686868">
                <Image x:Name="Img" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Label>Url obrazku</Label>
            <TextBox x:Name="URL" TextChanged="URL_TextChanged"></TextBox>
            <Label>Cena hry</Label>
            <TextBox x:Name="Price" TextChanged="URL_TextChanged"></TextBox>
            <Button MaxHeight="20" MinHeight="20" Margin="0,10,0,0" Click="Button_Click">
                <fa:ImageAwesome Icon="Save" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="1"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
