<Page x:Class="Objednavkovy_system.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Objednavkovy_system"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Login">

    <StackPanel>
        <Label HorizontalAlignment="Center" FontFamily="Tw Cen MT" Padding="0" Margin="0,10,0,0" FontSize="20">Přihlášení do systému</Label>
        <TextBox x:Name="email" Margin="10,10,10,2"></TextBox>
        <PasswordBox x:Name="password" Margin="10,0"></PasswordBox>
        <Button x:Name="login" Click="login_Click" Margin="10,2,10,10">Přihlásit</Button>
        <Button x:Name="alogin" Click="alogin_Click" Margin="10,2,10,10">Vyplnit admina</Button>
        <Button x:Name="Register" Click="alogin_Click_1" Margin="10,2,10,10">Registrovat</Button>
        
    </StackPanel>
</Page>
